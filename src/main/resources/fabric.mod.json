{
  "schemaVersion": 1,
  "id": "trulytreasures",
  "version": "${version}",

  "name": "Truly Treasures",
  "description": "Highly configurable mod that makes wandering traders sell treasure enchantments instead of villagers, making them truly rare and special enchantments",
  "authors": [
    "Ineffa"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/truly-treasures",
    "sources": "https://github.com/Ineffa/Truly-Treasures",
    "issues": "https://github.com/Ineffa/Truly-Treasures/issues"
  },

  "license": "GNU Lesser General Public License v3.0",
  "icon": "assets/trulytreasures/truly_treasures_icon.png",
  "accessWidener" : "trulytreasures.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.ineffa.trulytreasures.TrulyTreasures"
    ],
    "modmenu": [
      "com.ineffa.trulytreasures.config.TrulyTreasuresModMenu"
    ]
  },
  "mixins": [
    "trulytreasures.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.7",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
